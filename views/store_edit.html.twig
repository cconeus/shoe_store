<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/styles.css" media="screen" charset="utf-8">
        <title>Store Info</title>
    </head>
    <body>
        <div class="container" align="center">
            <h1>List of brands at {{ store.getName }}!</h1>

            {% if brands is not empty %}
            <h4>Here are the brands sold at this store:</h4>

                {% for brand in brands %}
                    <h6><a href="/brands/{{ brand.getId }}">{{ brand.getName }}</a></h6>
                {% endfor %}

            {% endif %}

            <h4>Add a brand to this store</h4>

                <form action="/stores/{{ store.getId }}/add_brand" method="post">
                    <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
                    <label for="brand_id">Brand name:</label>
                    <select id="brand_id" name="brand_id" type="text">
                        {% for brand in all_brands %}
                            <option value="{{ brand.getId }}">{{ brand.getName }}</option>
                        {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-warning">add</button>
                </form>
                <p>No brands at this store? Click <a href="/brands">here</a> to add a brand!</p>
